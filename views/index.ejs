<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Survey form revisited</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
      $(document).ready(function (){
        var socket = io.connect();
        $("#survey_form").submit(function(){
          socket.emit'posting_form',{
            name:$("#name").val(),
            location:$('#location').val(),
            language:$('#language').val(),
            comment:$("comment").val()
          }
        })
        // $('button').click(function(){
        //   number = Math.floor(Math.random()*(1000-1+1));
        //   socket.emit('random_number', {name:name, location:location, language:language, comment:comment, number:number})
        // })
        return false;
      })
    </script>
  </head>
  <body>
    <form action="/result" method="post">
      Your name: <input type="text" name="name" id="name" value=""><br>
      Dojo Location:<select name="location" id="location"><br>
        <option value="San Jose">San Jose</option>
        <option value="Seattle">Seattle</option>
      </select>
      Favorite Language:<select name="language" id="language"><br>
        <option value="python">python</option>
        <option value="javascript">javascript</option>
      </select>
      Comment(optional):<br>
      <textarea name="comment" rows="6" cols="30" placeholder="Please leave your comment" id="comment"></textarea>
      <button type="button" name="button" value="Submit">Submit</button>
    </form>
  </body>
</html>
